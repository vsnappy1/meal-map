# This section applies to all Kotlin files
[*.{kt,kts}]
ktlint_code_style = android_studio
max_line_length = 120
ktlint_function_naming_ignore_when_annotated_with = Composable

# This section OVERRIDES the settings above for test files
[**/src/{test,androidTest}/**/*.{kt,kts}]
max_line_length = 160
